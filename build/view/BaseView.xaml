<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:SUtility"
        Title="STEELFLEX Mod Manager" 
		WindowState="Maximized">
	<Grid>
		<ListBox SelectedIndex="1" ItemsSource="{Binding ModList}" SelectedItem="{Binding SelectedMod}"  HorizontalAlignment="Left" Margin="30,38,0,0" VerticalAlignment="Top" Width="325"/>
		<TextBox ToolTip="Search" AcceptsReturn="True" Text="{Binding SearchBox}"  HorizontalAlignment="Left" Margin="30,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108"/>
		<Button x:Name="Update_Button" Content="Update List" HorizontalAlignment="Left" Margin="143,14,0,0" VerticalAlignment="Top" Width="77"/>
		<Button x:Name="Install_bepinex" Content="Install/Update BepInEx" HorizontalAlignment="Left" Margin="225,14,0,0" VerticalAlignment="Top" Width="130"/>
		<Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="196" Margin="360,38,0,0" VerticalAlignment="Top" Width="211"/>
		<TextBlock HorizontalAlignment="Left" Margin="367,44,0,0" TextWrapping="Wrap" Text="{Binding ModName}" VerticalAlignment="Top" Width="183"/>
		<TextBlock Text="{Binding ModDesc}" Focusable="True" ClipToBounds="True" IsEnabled="True" IsManipulationEnabled="True" TextAlignment="Left" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" SnapsToDevicePixels="True" Margin="367,65,283.6,277.6"/>
		<Button x:Name="Install_Button" Content="Install" HorizontalAlignment="Left" Margin="483,94,0,0" VerticalAlignment="Top" Width="75"/>
		<Button x:Name="Disable_Button" IsEnabled="{Binding ModIsInstalled}" Content="Disable" HorizontalAlignment="Left" Margin="483,118,0,0" VerticalAlignment="Top" Width="75"/>
		<ComboBox ItemsSource="{Binding ModVersion}" SelectedItem="{Binding SelectedVersion}" HorizontalAlignment="Left" Margin="483,67,0,0" VerticalAlignment="Top" Width="75"/>
		<Button x:Name="Config_Button" IsEnabled="{Binding ModIsInstalled}" Content="Configure" HorizontalAlignment="Left" Margin="483,142,0,0" VerticalAlignment="Top" Width="75"/>
		<Button x:Name="Test_Button" Content="It's Come To This" HorizontalAlignment="Left" Margin="527,278,0,0" VerticalAlignment="Top" Width="146" Height="65"/>



	</Grid>
</Window>